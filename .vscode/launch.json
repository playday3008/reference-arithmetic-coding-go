    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package (compress)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "./cmd/main.go",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "args": ["--action", "compress", "--input", "./LICENSE", "--output", "./LICENSE.ac", "--overwrite"]
        },
        {
            "name": "Launch Package (decompress)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "./cmd/main.go",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "args": ["--action", "decompress", "--input", "./LICENSE.ac", "--output", "./LICENSE.txt", "--overwrite"]
        }
    ]
}